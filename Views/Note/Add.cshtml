@model Note

@{
    ViewData["Title"] = "Add Note";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">

<h1>Add New Note</h1>
<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">

            <form asp-action="Add" method="post">
                <div class="form-group">
                    <label asp-for="Title" style="font-weight:900">Title</label>
                    <input type="text" class="form-control" asp-for="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Description" style="font-weight:900">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="6" cols="63"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <br />
                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }

                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-success"><i class="fa-solid fa-floppy-disk" style="padding:5px"></i>Save</button>
                    <a href="/Note/GetAll" class="btn btn-primary"><i class="fa-solid fa-list" style="padding:5px"></i>List</a>
                </div>
            </form>
        </div>
    </div>
</div>
