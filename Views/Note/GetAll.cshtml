@model IEnumerable<Note>

@{
    ViewData["Title"] = "List";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">

<h1 style="text-align:center">Notes List</h1>
<hr />

<div class="container pt-3">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <a class="btn btn-primary" href="/Note/Add"><i class="fa-solid fa-circle-plus" style="padding:5px"></i>Add</a>
                </div>
                <br /><br />
            </div>
            <table class="table table-striped table-bordered">

                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Create Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>

                            <td>@(item.Description.Length > 70 ? item.Description.Substring(0, item.Description.Substring(0,70).LastIndexOf(" "))+"..." : item.Description )</td>

                            <td>@(((DateTime)item.CreateDate).ToString("ddd, dd MMM yyyy HH:mm"))</td>

                            <td class="text-center">
                                <a class="btn btn-info text-white" href="/Note/Detail?id=@item.ID"><i class="fa-solid fa-eye" style="padding:5px"></i></a>
                                <a class="btn btn-secondary text-white" href="/Note/Edit?id=@item.ID"><i class="fa-solid fa-pen-to-square" style="padding:5px"></i></a>
                                <a href="/Note/Delete?id=@item.ID" class="btn btn-danger"><i class="fa-solid fa-trash" style="padding:5px"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
